@model HomePageViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
}

<partial name="_Slider3" model="Model.Sliders" />

@if (Model.Products is not null && Model.Products.Count > 0)
{
    <div class="my-5">
        <h1 class="text-center mb-4">Sana Özel Ürünlerimiz</h1>
        <div class="container">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var item in Model.Products)
                {
                    <partial name="_ProductView2" model="item" />
                }
            </div>
        </div>
    </div>
}

@if (Model.News is not null && Model.News.Count > 0)
{
    <div class="my-5">
        <h1 class="text-center mb-4">Sana Özel Kampanyalarımız</h1>
        <div class="row gx-4 gx-lg-5 row-cols-2 justify-content-center">
            @foreach (var item in Model.News)
            {
                <partial name="_NewsView" model="item" />
            }
        </div>
    </div>
}


