@model ProductDetailViewModel

@{
    ViewData["Title"] = Model.Product.Name;
}

<section class="single_product_details_area section_padding_0_100">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="single_product_thumb">
                    <div id="product_details_slider" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li class="active" data-target="#product_details_slider" data-slide-to="0" style="background-image: url(/Img/Products/@Model.Product.Image);"></li>
                            @if (!string.IsNullOrEmpty(Model.Product.HelperImage1))
                            {
                                <li data-target="#product_details_slider" data-slide-to="1" style="background-image: url(/Img/Products/@Model.Product.HelperImage1);"></li>
                            }
                            @if (!string.IsNullOrEmpty(Model.Product.HelperImage2))
                            {
                                <li data-target="#product_details_slider" data-slide-to="2" style="background-image: url(/Img/Products/@Model.Product.HelperImage2);"></li>
                            }
                            @if (!string.IsNullOrEmpty(Model.Product.HelperImage3))
                            {
                                <li data-target="#product_details_slider" data-slide-to="3" style="background-image: url(/Img/Products/@Model.Product.HelperImage3);"></li>
                            }
                        </ol>

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/Img/Products/@Model.Product.Image" alt="Product Image">
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Product.HelperImage1))
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/Img/Products/@Model.Product.HelperImage1" alt="Helper Image 1">
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Product.HelperImage2))
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/Img/Products/@Model.Product.HelperImage2" alt="Helper Image 2">
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Product.HelperImage3))
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/Img/Products/@Model.Product.HelperImage3" alt="Helper Image 3">
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="single_product_desc">
                    <h4 class="title">@Model.Product.Name</h4>
                    <h4 class="price">@Model.Product.Price.ToString("c")</h4>
                    <p class="available">Available: <span class="text-muted">In Stock</span></p>
                    <p class="lead">@Model.Product.Description</p>

                    <form class="cart clearfix mb-50 d-flex" method="post" asp-action="Add" asp-controller="Cart">
                        <input type="hidden" name="ProductId" value="@Model.Product.Id" />
                        <div class="quantity">
                            <input type="number" class="qty-text" id="qty" step="1" min="1" name="quantity" value="1">
                        </div>
                        <button type="submit" class="btn cart-submit d-block">Sepete Ekle</button>
                    </form>

                    <form method="post" asp-action="Add" asp-controller="Favorites">
                        <input type="hidden" name="ProductId" value="@Model.Product.Id" />
                        <button class="btn btn-outline-dark" type="submit">
                            <i class="bi-heart me-1"></i>
                            Favorilere Ekle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
